#!/bin/sh
#
# Client for Spider BBS, written in Tcl/Tk
#
# Copyright 1996 Dominic Mitchell
#\
exec wish "$0" "$@"

#
# $Header: /home/ncvs/src/tkclient/tkclient.in,v 1.2 1997/02/13 17:08:48 dom Exp $
#

if {[info tclversion] < 7.5} {
    puts "Sorry, tkclient requires TCL v7.5 or later"
    exit 0
}

set LIBDIR @LIBDIR@

source $LIBDIR/init.tcl
source $LIBDIR/cmds.tcl
source $LIBDIR/messages.tcl
source $LIBDIR/talker.tcl
source $LIBDIR/ui.tcl
source $LIBDIR/utils.tcl

# Create the main User Interface
tkclient_ui

# Run any initialization Procedures
foreach i [array names InitHandlers] {
    eval $InitHandlers($i)
}
